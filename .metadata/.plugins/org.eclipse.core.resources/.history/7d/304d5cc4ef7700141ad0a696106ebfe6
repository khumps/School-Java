import javax.swing.*;

import java.awt.event.*;
public class Display extends JFrame implements ActionListener, MouseListener{
	static JTextField timerLength = new JTextField("150", 10);
	Timer timer = new Timer(Integer.parseInt(Display.timerLength.getText()), this);

	Display()
	{
		this.setDefaultCloseOperation(EXIT_ON_CLOSE);;
	LifeBoard game = new LifeBoard();
	game.addMouseListener(this);
	this.add(game);
	this.pack();
	}
	
	public static void main(String[] args)
	{
		Display test = new Display();
		test.setVisible(true);
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
	@Override
	public void mouseClicked(MouseEvent e) {
	}

	@Override
	public void mouseEntered(MouseEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void mouseExited(MouseEvent arg0) {
		// TODO Auto-generated method stub

	}

	@Override
	public void mousePressed(MouseEvent e) {
		// TODO Auto-generated method stub
		int x = (e.getX() + LifeBoard.inset.left) / LifeBoard.boxSize;
		int y = ((e.getY() + LifeBoard.inset.top) / LifeBoard.boxSize);
		if (x < LifeBoard.boardSize && x > -1 && y < LifeBoard.boardSize && y > -1) {
			System.out.println(x + " " + y);
			if (LifeBoard.life.getBoard().board[x][y] == 0)
				LifeBoard.life.getBoard().board[x][y] = 1;
			else
				LifeBoard.life.getBoard().board[x][y] = 0;
			this.repaint();
		}
	}

	@Override
	public void mouseReleased(MouseEvent arg0) {
		// TODO Auto-generated method stub

	}
	
	public void actionPerformed(ActionEvent e) {

		String command = e.getActionCommand();
		if (command.equals("play")) {
			
			if(isRunning)
			{
				timer.stop();
				isRunning = false;
				play.setText("Start");
			}
				
			else
			{
				isRunning = true;
				play.setText("Stop");
				timer.start();
			}
		}
		if (command.equals("next")) {

		}
		if (command.equals("prev")) {
		}
		if(command.equals("timer"))
		{
			life.nextGeneration();
			this.repaint();
			timer.start();
		}
		if(command.equals("clear"))
			life.getBoard().clear();
		this.repaint();

	}
}
