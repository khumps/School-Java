
public class HLine extends Line {

	public HLine(int x, int y, int length, char paintChar) {
		super(x, y, length, paintChar);
		
	}
	
	public HLine(Point point, int length, char paintChar) {
		super(point, length, paintChar);

}

	public void paintOn(Screen screen) {
		char paintChar = super.getPaintChar();
		for(int i = super.start.getX();i < start.getX() + length; i++)
		{
			screen.paintAt(i, super.start.getX(), this);
		}
		
	}
}
